{
  "compilerOptions": {
    /* Basic Options */
    "target": "esnext",
    "sourceMap": true,
    "jsx": "react",
    "allowJs": true,
//    "declaration": true,
    "module": "esnext",
    "moduleResolution": "node",

    /* Strict Type-Checking Options */
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "**/*.spec.ts",
    "**/*.spec.ts"
  ]
}
